    </div>


    <form id="park-form">
        <div class="row">


            <div class="col-sm-4">
                <div class="form-group">
                    Dauer
                    <select class="form-control" class="filter">
                        <option class="bla">1h</option>
                        <option>1,5h</option>
                        <option>2h</option>
                        <option>2,5h</option>
                        <option>3h</option>
                        <option>3,5h</option>
