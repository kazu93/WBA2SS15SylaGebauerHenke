                        <option>6h</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    Schwierigkeitsgrad
                    <select class="form-control">
                        <option>Anfänger</option>
                        <option>Fortgeschrittene</option>
                        <option>Profis</option>
                    </select>
                </div>
            </div>
            </br>
            <div class="col-sm-4">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Profi-/Ranger-geführt
                    </label>
                </div>
            </div>
        </div>
    </form>

    <table class="table" class="table-hover">
        <% for(var i=0; i < dataJson.Gruppen.length; i++) { %>
        <tr>
            <td><%- dataJson.Gruppen[i].ort %></td>
            <td><%- dataJson.Gruppen[i].activity %></td>
            <td><%- dataJson.Gruppen[i].datum %></td>
            <td class="dauer"><%- "Dauer: "+dataJson.Gruppen[i].dauer %></td>
            <td><%- dataJson.Gruppen[i].schwierigkeitsgrad %></td>
            <td><%- dataJson.Gruppen[i].frei+" frei" %></td>
            <td><%- dataJson.Gruppen[i].profi == true %></td>
            <td>
                <button type="button" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
